<Alloy>
    <Window module="xp.ui" title="Screen B" backgroundColor="#B5DCE1" forceWindowAndroid='true'>
        <View height="Ti.UI.SIZE" layout="vertical">
            <Label>Screen B</Label>
            <Label id="stackSize" />
            <TextField module="ui" id='changeTest'  mask="card-number" />
            <TextField module="ui" id='changeTest2' onChange='fillForm' delayedMask="card-number" />
            <Button onClick="openSubScreenB">Open Sub Screen</Button>
            <Button id='toggleActionBarBtn' onClick="hideActionBar" platform="android">Hide Action Bar</Button>
            <Button id='toggleHomeBtn' platform="android" onClick="hideHomeButton">Hide Home Button</Button>
            <Button platform="android" onClick="showActionBarLogo">Show Action Bar Logo</Button>
        </View>
        <Require id="controls" src="_controls" />
    </Window>
</Alloy>


