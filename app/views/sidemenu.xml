<Alloy>
    <Window module="xp.ui">
        <ListView onItemclick="onItemClick" defaultItemTemplate="default">
            <Templates>
                <ItemTemplate name="default">
                    <Label bindId="title" />
                </ItemTemplate>
            </Templates>
            <ListSection>
                <HeaderView platform="ios">
                    <View height="70"/>
                </HeaderView>
                <ListItem title:text="Root A"/>
                <ListItem title:text="Root B"/>
                <ListItem title:text="Sub Screen A\n(in current Root)"/>
            </ListSection>
            <FooterView>
                <View/>
            </FooterView>
        </ListView>
    </Window>
</Alloy>
